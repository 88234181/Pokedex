<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="@drawable/pokedex_list_selector"
    android:orientation="vertical"
    android:clickable="true">

    <!-- id -->
    <TextView
        android:id="@+id/pokedexId"
        android:text="001"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:textSize="22sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_margin="2dp"
        android:layout_alignParentTop="true" />

    <!-- layout for the image -->
    <LinearLayout
        android:id="@+id/pokedexImageThumbnail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:background="@drawable/pokedex_image_bg"
        android:layout_toEndOf="@+id/pokedexId"
        android:layout_alignTop="@+id/pokedexId"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/pokedexImage"
            android:src="@drawable/pokedex001"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <!-- name of the pokemon -->
    <TextView
        android:id="@+id/pokedexName"
        android:text="name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toEndOf="@+id/pokedexImageThumbnail"
        android:layout_alignTop="@+id/pokedexId"
        android:layout_marginStart="5dp"
        android:textStyle="bold" />

    <!-- first type of pokemon -->
    <TextView
        android:id="@+id/pokedexType1"
        android:text="type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pokedexName"
        android:layout_below="@+id/pokedexName"
        android:layout_alignBottom="@+id/pokedexId"
        />

    <!-- second type of pokemon -->
    <TextView
        android:id="@+id/pokedexType2"
        android:text="type2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/pokedexType1"
        android:layout_below="@+id/pokedexName"
        android:layout_alignBottom="@+id/pokedexId"
        android:layout_marginStart="5dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/right_arrow"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
