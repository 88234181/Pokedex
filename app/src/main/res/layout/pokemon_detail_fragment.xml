<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pokemonDetail">

    <!-- Id of the pokemon -->
    <TextView
        android:id="@+id/pokedexDetailId"
        android:text="001"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_margin="2dp" />

    <!-- name of the pokemon -->
    <TextView
        android:id="@+id/pokedexDetailName"
        android:text="Balbausal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/pokedexDetailId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info"
        android:layout_margin="2dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/pokedexDetailName"
        android:id="@+id/textView" />

    <!-- title divider -->
    <View
        android:id="@+id/pokedexDetailTitleDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/pokedexDetailId" />

    <!-- image of the pokemon -->
    <ImageView
        android:id="@+id/pokedexDetailImage"
        android:src="@drawable/pokedex001"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_below="@+id/pokedexDetailTitleDivider"
        android:layout_centerHorizontal="true"
         />

    <!-- image divider -->
    <View
        android:id="@+id/pokedexDetailImageDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/pokedexDetailImage" />

    <LinearLayout
        android:id="@+id/typeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/pokedexDetailImageDivider"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/linearLayout">

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="18sp"
            android:layout_margin="2dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            />

        <!--  divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/type" />

        <!-- type of pokemon -->
        <TextView
            android:text="type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:gravity="center"
        android:layout_below="@+id/pokedexDetailImageDivider"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView">

        <TextView
            android:id="@+id/candy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Candy Needed to Evolve"
            android:layout_margin="2dp"
            android:textSize="18sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            />

        <!--  divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/type" />

        <TextView
            android:text="type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp" />

    </LinearLayout>

    <!--  divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/typeLayout" />

</RelativeLayout>